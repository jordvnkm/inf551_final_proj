<head>
  <link rel="stylesheet"
           href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">   
  <style type="text/css">

  html, body {
    margin-left: 20px;
    margin-right: 20px;
    margin-bottom: 20px;
  }

  #query_results {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
  }
 
  #query_results td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }
  
  #query_results th {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  .headertitle {
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 30px;
  }

  .outercontainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .resultscontainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  <!-- FORM STUFF -->
  
  .queryContainer {
    display: flex;
    flex-direction: row;
    width: 30%;
    border: 1px solid #dfe1e5;
    border-radius: 30px;
    outline: none;
  }

  .querybox {
    display: flex;
    flex-direction: row;
    justify-content: center;
  }

  .queryContainer {
    display: flex;
    width: 100%;
    min-width: 400px;
    border: 1px solid #dfe1e5;
    border-radius: 30px;
    outline: none;
    margin-left: 30px;
    margin-top: 30px;
  }

  .queryContainer:hover {
    box-shadow: 2px 2px 2px 2px #dfe1e5;
  }

  .queryContainer:focus-within {
    box-shadow: 2px 2px 2px 2px #dfe1e5;
  }

  .submit {
    opacity: 0.0;
    width: 0;
    height: 0;
    border: none;
    outline: none;
  }

  .radiobutton {
    display: flex;
    opacity: 0;
    width: 0;
    height: 0;
    outline: none;
    border: none;
  }

  .radiobutton:checked ~ label {
    border: 1px solid #99a0a6;
    box-shadow: 2px 2px 2px 2px #dfe1e5;
  }

  .radiolabel {
    display: inline-block;
    padding: 10px 20px;
    border-radius: 5px;
    background-color: #f1f1f1;
    margin-left: 20px;
    margin-right: 20px;
  }

  .radiolabel:hover {
    box-shadow: 2px 2px 2px 2px #dfe1e5;
  }

  .input {
   width: 100%;
    padding: 10px;
    border: none;
    outline: none;
  }

  .icon {
    padding: 10px;
    min-width: 50px;
    text-align: center;
    color: #99a0a6;
  }

  .databases {
    display: flex; 
    flex-direction: row;
  }

  .headerinfo {
    display: flex;
    flex-direction: column;
  }

  .formcontainer {
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: flex-start;
    width: 100%;
    height: 100%;
    margin-top: 20px;
    margin-bottom: 40px;
  }
  </style>
</head>

<div class="outercontainer">

 <form action="/query" method="get" class="formcontainer">
   <div class="headerinfo">
     <div class="headertitle">
       <span style="color: #4285F4">Que</span>
       <span style="color: #DB4437">ryi</span>
       <span style="color: #F4B400">ng</span>
       <span>&nbsp</span>
       <span style="color: #4285F4">Dat</span>
       <span style="color: #0F9D58">aba </span>
       <span style="color: #DB4437">se</span>
       <span>&nbsp</span>
     </div>

     <div class="databases">
     <% @databases_list.each_with_index do |database_name, index|  %>
       <div class=dbchild>
       <% if database_name == @database_name %>
         <input type="radio" id="<%= database_name %>" name="database_name" value=<%= database_name %> checked="checked" class="radiobutton">
       <% else %>
         <input type="radio" id="<%= database_name %>" name="database_name" value=<%= database_name %> class="radiobutton">
       <% end %>

       <label for="<%= database_name %>" class="radiolabel"><%= database_name %></label>
       </div>
     <% end %>
     </div>
   </div>

   <div class="querybox">
     <!-- <label for="db_query">Enter Query</label> -->
     <div class="queryContainer">
       <i class="fa fa-search icon"></i>
       <input type="text" id="db_query" name="db_query" placeholder="Enter Query" id="query    box" class="input">
       <input type="submit" value="Submit" class="submit">
     </div>
   </div>
   <br>
   <br>
 </form>


  <div class="resultscontainer">

  <% @render_objects.each do |object|  %>
    <table id="query_results">
      <tr>

      <th>Table Name</th>


      <% object.each_key do |key| %>
        <% if key == "Table name" %>
          <% next %>
        <% end %>
        <% if key == "Hyperlinks" %>
          <% next %>
        <% end %>
        <th><%= key %></th>
      <%end%>
      </tr>

      <tr>
      <td><%= object["Table name"]%></td>

      <% object.each_key do |key| %>
        <% if key == "Table name" %>
          <% next %>
        <% end %>
        <% if key == "Hyperlinks" %>
          <% next %>
        <% end %>
        <% if object.has_key? "Hyperlinks" and object["Hyperlinks"].keys.include? key %>
          <td><a href=<%= object["Hyperlinks"][key] %>><%= object[key] %><a/></td>
        <%  else %>
          <td><%= object[key]%></td>
        <%  end %>
      <%end%>
      </tr>
    </table><br>
  <% end %>

  </div>

</div>

